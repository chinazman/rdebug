// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model ErrorLog {
  id        String   @id @default(cuid())
  url       String
  message   String   @db.MediumText
  stack     String?  @db.MediumText
  userAgent String
  timestamp DateTime @default(now())
  sessionId String

  @@index([timestamp])
  @@index([sessionId])
}

model DomSnapshot {
  id           String   @id @default(cuid())
  url          String
  domStructure String   @db.MediumText
  userAgent    String
  timestamp    DateTime @default(now())
  sessionId    String
  clickCount   Int

  @@index([timestamp])
  @@index([sessionId])
}

model NetworkRequest {
  id             String   @id @default(cuid())
  url            String
  method         String
  status         Int?
  statusText     String?
  responseTime   Int?     // 响应时间（毫秒）
  requestHeaders String?  @db.MediumText
  responseHeaders String? @db.MediumText
  requestBody    String?  @db.MediumText
  responseBody   String?  @db.MediumText
  error          String?  @db.MediumText
  userAgent      String
  sessionId      String
  timestamp      DateTime @default(now())

  @@index([timestamp])
  @@index([sessionId])
  @@index([url])
} 